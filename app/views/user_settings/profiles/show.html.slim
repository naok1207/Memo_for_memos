= form_with model: current_user, url: user_settings_profile_path, local: true, class: 'neo m-4 w-80 p-5' do |f|
  = f.label :introduction, class: 'd-block'
  = f.text_area :introduction, class: 'w-100 neo my-4 p-3', style: 'outline: none; border: none; height: 100px; resize: none'
  = f.submit class: 'neo neo-btn p-2 d-block'
